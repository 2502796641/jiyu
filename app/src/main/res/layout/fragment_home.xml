<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:stv="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@mipmap/icon_home_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/shape_notifition_deepblue"
            >
            <ImageView
                android:layout_width="@dimen/size_15dp"
                android:layout_height="@dimen/size_15dp"
                android:src="@mipmap/icon_home_notifition"
                android:layout_marginLeft="@dimen/size_10dp"/>

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公告：24小时不登录则停止计算，登陆后回复!"
                android:textSize="@dimen/text_12sp"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/size_5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginTop="@dimen/size_15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_hashrate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="算力：6666"
                android:padding="@dimen/size_5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_13sp"
                android:layout_marginLeft="@dimen/size_5dp"
                android:background="@drawable/shape_notifition_deepblue"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/ll_wallet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/size_25dp"
                    android:layout_height="@dimen/size_25dp"
                    android:src="@mipmap/icon_xinlang"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_wallet"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/size_5dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_invite_friend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/size_10dp">
                <ImageView
                    android:layout_width="@dimen/size_25dp"
                    android:layout_height="@dimen/size_25dp"
                    android:src="@mipmap/icon_xinlang"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_invite_friend"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/size_5dp"/>
            </LinearLayout>
        </LinearLayout>

        <GridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_20dp"
            android:numColumns="3"
            android:scrollbars="none"></GridView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/icon_home_bottom_banner">

    </LinearLayout>



</LinearLayout>