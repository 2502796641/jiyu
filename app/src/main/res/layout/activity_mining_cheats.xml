<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.guang.jiyu.jiyu.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        style="@style/hor_view_1dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_base_bg"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="什么是MBTC"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack2"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/string_what_is_MBTC"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/colorBlack"
                android:lineSpacingExtra="@dimen/size_10dp"
                android:paddingLeft="@dimen/size_20dp"
                android:paddingRight="@dimen/size_20dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="什么是MBTC"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/text_18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack2"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/string_what_is_MBTC"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/colorBlack"
                android:lineSpacingExtra="@dimen/size_10dp"
                android:paddingLeft="@dimen/size_20dp"
                android:paddingRight="@dimen/size_20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>