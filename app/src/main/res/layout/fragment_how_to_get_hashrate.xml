<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_400dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_20dp"
            >
            <View
                style="@style/ver_view_3dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_sign_in"
                android:textSize="@dimen/text_20sp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_sign_award"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:textSize="@dimen/text_16sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_20dp"
            >
            <View
                style="@style/ver_view_3dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_id_identification"
                android:textSize="@dimen/text_20sp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlack"

                />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_sign_award"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:textSize="@dimen/text_16sp"
            />        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_20dp"
            >
            <View
                style="@style/ver_view_3dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_read_task"
                android:textSize="@dimen/text_20sp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlack"

                />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_sign_award"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:textSize="@dimen/text_16sp"
            /><RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_20dp"
            >
            <View
                style="@style/ver_view_3dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_invite_friend"
                android:textSize="@dimen/text_20sp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlack"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_sign_award"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:textSize="@dimen/text_16sp"
            />


    </LinearLayout>
    <com.allen.library.SuperButton
        android:id="@+id/btn_get"
        android:layout_width="@dimen/size_120dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_5dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:text="@string/string_get_hashrate"
        android:textSize="@dimen/text_18sp"
        stv:sCornersRadius="@dimen/size_5dp"
        stv:sSolidColor="@color/theme_color"
        stv:sStrokeDashWidth="@dimen/size_10dp"
        stv:sSizeHeight="@dimen/size_5dp"
        stv:sStrokeColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_80dp"
        />
</RelativeLayout>