<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.guang.jiyu.jiyu.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:background="@color/theme_color"
        >

        <ImageView
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_hashrate_replain"
            android:id="@+id/iv_hashrate_explain" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignTop="@+id/iv_hashrate_explain"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="78956"
                android:textColor="@color/publicity_text_color"
                android:textSize="@dimen/text_36sp" />


            <TextView
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/string_hashrate"
                android:textSize="@dimen/text_16sp"
                android:textColor="@color/red"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="13dp"
            android:id="@+id/linearLayout2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/basic_calculation_force_text"
                android:textColor="@color/publicity_text_color"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/id_basic_calculation_force"
                android:textColor="@color/publicity_text_color"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10086"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_toLeftOf="@+id/iv_hashrate_explain"
            android:layout_toStartOf="@+id/iv_hashrate_explain">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/temporary_calculation_force_text"
                android:textColor="@color/publicity_text_color"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/id_temporary_calculation_force"
                android:textColor="@color/publicity_text_color"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_weight="1"
            android:background="@drawable/calculation_layout_style"
            android:padding="@dimen/size_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="4">

                <ImageView
                    android:layout_width="@dimen/size_35dp"
                    android:layout_height="@dimen/size_35dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_hashrate_invite_friend" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calculation_force_Inviting_friends_text"
                        android:textColor="@color/publicity_text_color"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5dp"
                        android:text="@string/calculation_force_Inviting_friends_detailed_text"
                        android:textColor="@color/publicity_text_color"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center">

                <Button
                    android:id="@+id/id_calculation_force_Inviting_friends_Invitation"
                    android:layout_width="@dimen/size_60dp"
                    android:layout_height="@dimen/size_30dp"
                    android:background="@drawable/calculation_button_style"
                    android:text="@string/calculation_force_Inviting_friends_Invitation_text"
                    android:textColor="@color/publicity_background_color"
                    android:textSize="@dimen/text_14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_weight="1"
            android:background="@drawable/calculation_layout_style"
            android:padding="@dimen/size_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="4">

                <ImageView
                    android:layout_width="@dimen/size_35dp"
                    android:layout_height="@dimen/size_35dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_hashrate_id_verify" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calculation_force_identity_authentication_text"
                        android:textColor="@color/publicity_text_color"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5dp"
                        android:text="@string/calculation_force_identity_authentication_detailed_text"
                        android:textColor="@color/publicity_text_color"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center">

                <Button
                    android:id="@+id/id_calculation_force_authentication"
                    android:layout_width="@dimen/size_60dp"
                    android:layout_height="@dimen/size_30dp"
                    android:background="@drawable/calculation_button_style"
                    android:text="@string/calculation_force_authentication_text"
                    android:textColor="@color/publicity_background_color"
                    android:textSize="@dimen/text_14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_weight="1"
            android:background="@drawable/calculation_layout_style"
            android:padding="@dimen/size_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="4">

                <ImageView
                    android:layout_width="@dimen/size_35dp"
                    android:layout_height="@dimen/size_35dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_hashrate_day_study" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calculation_force_daily_study_text"
                        android:textColor="@color/publicity_text_color"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5dp"
                        android:text="@string/calculation_force_daily_study_detailed_text"
                        android:textColor="@color/publicity_text_color"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center">

                <Button
                    android:id="@+id/id_calculation_force_study"
                    android:layout_width="@dimen/size_60dp"
                    android:layout_height="@dimen/size_30dp"
                    android:background="@drawable/calculation_button_style"
                    android:text="@string/calculation_force_study_text"
                    android:textColor="@color/publicity_background_color"
                    android:textSize="@dimen/text_14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_weight="1"
            android:background="@drawable/calculation_layout_style"
            android:padding="@dimen/size_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="4">

                <ImageView
                    android:layout_width="@dimen/size_35dp"
                    android:layout_height="@dimen/size_35dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_hashrate_day_sign" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calculation_force_Sign_in_every_day_text"
                        android:textColor="@color/publicity_text_color"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5dp"
                        android:text="@string/calculation_force_Sign_in_every_day_detailed_text"
                        android:textColor="@color/publicity_text_color"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center">

                <Button
                    android:id="@+id/id_calculation_force_Sign_in"
                    android:layout_width="@dimen/size_60dp"
                    android:layout_height="@dimen/size_30dp"
                    android:background="@drawable/calculation_button_style"
                    android:text="@string/calculation_force_Sign_in_text"
                    android:textColor="@color/publicity_background_color"
                    android:textSize="@dimen/text_14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_weight="1"
            android:background="@drawable/calculation_layout_style"
            android:padding="@dimen/size_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="4">

                <ImageView
                    android:layout_width="@dimen/size_35dp"
                    android:layout_height="@dimen/size_35dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_hashrate_info_read" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calculation_force_consulting_reading_text"
                        android:textColor="@color/publicity_text_color"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5dp"
                        android:text="@string/calculation_force_consulting_reading_detailed_text"
                        android:textColor="@color/publicity_text_color"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center">

                <Button
                    android:id="@+id/id_calculation_force_Read"
                    android:layout_width="@dimen/size_60dp"
                    android:layout_height="@dimen/size_30dp"
                    android:background="@drawable/calculation_button_style"
                    android:text="@string/calculation_force_Read_text"
                    android:textColor="@color/publicity_background_color"
                    android:textSize="@dimen/text_14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_weight="1.1">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>