<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.guang.jiyu.jiyu.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        style="@style/hor_view_1dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.allen.library.SuperButton
                android:id="@+id/btn_hashrate_rank"
                android:layout_width="@dimen/size_120dp"
                android:layout_height="@dimen/size_35dp"
                stv:sCornersRadius="@dimen/size_8dp"
                stv:sSolidColor="@color/theme_color"
                android:text="@string/string_hashrate_rank"
                android:textSize="@dimen/text_16sp"
                android:textColor="@color/colorBlack"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.allen.library.SuperButton
                android:id="@+id/btn_mbtc_rank"
                android:layout_width="@dimen/size_120dp"
                android:layout_height="@dimen/size_35dp"
                stv:sCornersRadius="@dimen/size_8dp"
                stv:sSolidColor="@color/theme_color"
                android:text="@string/string_mbtc_rank"
                android:textSize="@dimen/text_16sp"
                android:textColor="@color/colorBlack"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>
</LinearLayout>