<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_120dp"
            android:background="@mipmap/icon_project_intro_bg">
            <ImageView
                android:id="@+id/iv_return"
                android:layout_width="@dimen/size_15dp"
                android:layout_height="@dimen/size_15dp"
                android:src="@mipmap/icon_arrow_left"
                android:layout_margin="@dimen/size_10dp"/>

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:src="@mipmap/icon_mbtc_logo"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_logo"
                android:text=""
                android:textColor="@color/theme_color"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/size_5dp"
                android:textSize="@dimen/text_16sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp">
            <View
                style="@style/ver_view_1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_project_intro"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_20dp"
                android:textSize="@dimen/text_16sp"/>

            <View
                style="@style/hor_view_1dp"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_project_intro_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="@dimen/size_5dp"
            android:layout_marginLeft="@dimen/size_15dp"/>
        <View
            style="@style/hor_view_10dp_gray_f5f5f5"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp">
            <View
                style="@style/ver_view_1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_issue_date"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_20dp"
                android:textSize="@dimen/text_16sp"/>

            <View
                style="@style/hor_view_1dp"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_issue_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="@dimen/size_10dp"
            android:padding="@dimen/size_10dp"/>
        <View
            style="@style/hor_view_10dp_gray_f5f5f5"
            />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp">
            <View
                style="@style/ver_view_1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_offical_website"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_20dp"
                android:textSize="@dimen/text_16sp"/>

            <View
                style="@style/hor_view_1dp"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_offical_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="@dimen/size_10dp"
            android:padding="@dimen/size_10dp"/>
        <View
            style="@style/hor_view_10dp_gray_f5f5f5"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp">
            <View
                style="@style/ver_view_1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_white_paper"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_20dp"
                android:textSize="@dimen/text_16sp"/>

            <View
                style="@style/hor_view_1dp"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_white_paper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="@dimen/size_10dp"
            android:padding="@dimen/size_10dp"/>
        <View
            style="@style/hor_view_10dp_gray_f5f5f5"
            />




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp">
            <View
                style="@style/ver_view_1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_issue_count"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_20dp"
                android:textSize="@dimen/text_16sp"/>

            <View
                style="@style/hor_view_1dp"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_issue_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="@dimen/size_10dp"
            android:padding="@dimen/size_10dp"/>
        <View
            style="@style/hor_view_10dp_gray_f5f5f5"
            />




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp">
            <View
                style="@style/ver_view_1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_circulate_count"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_20dp"
                android:textSize="@dimen/text_16sp"/>

            <View
                style="@style/hor_view_1dp"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_circulate_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="@dimen/size_10dp"
            android:padding="@dimen/size_10dp"/>
        <View
            style="@style/hor_view_10dp_gray_f5f5f5"
            />
    </LinearLayout>

</ScrollView>