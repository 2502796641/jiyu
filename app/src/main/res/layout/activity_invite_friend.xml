<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.guang.jiyu.jiyu.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <View
            style="@style/hor_view_1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀约规则"
            android:textSize="@dimen/text_16sp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10dp"
        android:text="@string/string_invite_friend_rule"
        android:lineSpacingExtra="@dimen/size_3dp"/>
        <View
            style="@style/hor_view_10dp_gray_2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_140dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_my_invite_code"
            android:textColor="@color/colorBlack"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_20dp"
            android:textSize="@dimen/text_14sp"/>
        <TextView
            android:id="@+id/tv_invite_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"
            android:textColor="@color/colorBlack"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_50dp"
            android:textSize="@dimen/text_20sp"/>
        <com.allen.library.SuperButton
            android:id="@+id/btn_copy_invite_code"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_35dp"
            stv:sCornersRadius="@dimen/size_5dp"
            stv:sSolidColor="@color/theme_color"
            android:text="@string/string_copy_invite_code"
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/colorBlack"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_invite_code"
            android:layout_marginTop="@dimen/size_10dp"
            android:singleLine="false"/>
    </RelativeLayout>
    <View
        style="@style/hor_view_10dp_gray_2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_invite_remark"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_20dp"
            android:textSize="@dimen/text_16sp"/>

        <View
            style="@style/hor_view_1dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lv_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
        <TextView
            android:id="@+id/tv_no_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            android:text="暂无记录"
            android:textSize="@dimen/text_16sp"
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>