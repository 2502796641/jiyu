<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_share_to"
        android:gravity="center"
        android:textSize="@dimen/text_18sp"
        android:padding="@dimen/size_10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_120dp"
        >

    <RelativeLayout
        android:id="@+id/rl_weibo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_weibo"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:src="@mipmap/icon_weibo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_sina_weibo"
            android:layout_below="@+id/iv_weibo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_10dp"
            android:textSize="@dimen/text_14sp"
            />
    </RelativeLayout>
        <RelativeLayout
        android:id="@+id/rl_wechat"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_wechat"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:src="@mipmap/icon_wechat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_wechat"
            android:layout_below="@+id/iv_wechat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_10dp"
            android:textSize="@dimen/text_14sp"/>
    </RelativeLayout>
        <RelativeLayout
        android:id="@+id/rl_friends_circle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_friends_circle"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:src="@mipmap/icon_friend_circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_friends_circle"
            android:layout_below="@+id/iv_friends_circle"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_14sp"
            android:layout_marginTop="@dimen/size_10dp"/>
    </RelativeLayout>
        <RelativeLayout
        android:id="@+id/rl_qq"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:src="@mipmap/icon_qq"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_QQ"
            android:layout_below="@+id/iv_qq"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_10dp"
            android:textSize="@dimen/text_14sp"/>
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>