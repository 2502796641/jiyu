<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:background="@color/publicity_background_color"
    android:orientation="vertical">
    <com.guang.jiyu.jiyu.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        style="@style/hor_view_1dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_weight="1"
        android:lineSpacingExtra="@dimen/size_5dp"
        android:text="@string/Readby_publicity_text"
        android:textColor="@color/publicity_text_color"
        android:textSize="@dimen/text_14sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size_30dp"
        android:layout_marginRight="@dimen/size_30dp"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_publicity_01" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size_30dp"
        android:layout_marginRight="@dimen/size_30dp"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_publicity_02" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal">
        <com.allen.library.SuperButton
            android:id="@+id/btn_login"
            android:layout_width="@dimen/size_120dp"
            android:layout_height="@dimen/size_40dp"
            stv:sCornersRadius="@dimen/size_5dp"
            stv:sSolidColor="@color/theme_color"
            android:text="@string/string_get_award"
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_40dp"
            android:layout_below="@id/ll_pwd_again"/>
    </LinearLayout>
</LinearLayout>
