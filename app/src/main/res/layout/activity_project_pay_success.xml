<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.guang.jiyu.jiyu.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        style="@style/hor_view_1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_150dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:src="@mipmap/icon_project_pay_success"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付成功"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_60dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_80dp">
            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999.99"
                android:textSize="@dimen/text_24sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASDA"/>
        </LinearLayout>

    </RelativeLayout>

    <com.allen.library.SuperButton
        android:id="@+id/btn_pay"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/size_30dp"
        android:layout_width="@dimen/size_140dp"
        android:layout_height="@dimen/size_30dp"
        stv:sCornersRadius="@dimen/size_5dp"
        stv:sSolidColor="@color/theme_color"
        android:text="查看发布记录"
        android:textSize="@dimen/text_16sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_30dp"
        />
</LinearLayout>